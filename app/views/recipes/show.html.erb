<h2>Selected Recipe</h2>

<div>
  <%= render 'shared/recipe_show' %>
</div>
<div>
  <%= link_to "Add ingrediant" , new_user_recipe_recipe_food_path(recipe_id: @recipe.id)  %>
</div>
<hr>
<div>
<table border =1>
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Value</th>
    <th>Actions</th>
  </tr>
    <% @recipe_foods.each do |recipe_food| %>
      <tr>
         <td><%= recipe_food.food.name %></td>
         <td><%= recipe_food.quantity %> <%= recipe_food.food.measurement_unit %></td>
         <td><%= recipe_food.value_result %></td>
          <td><%=button_to 'Delete', user_recipe_recipe_food_path(@user.id,@recipe.id,recipe_food.id,),method: :delete %> </td>  
      </tr>
  <% end %>
</table>

</div>

<%= link_to 'Back to recipes', user_recipes_path(@recipe.user.id) %>
