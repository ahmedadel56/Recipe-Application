<h2>User Recipes</h2>
<div>
  <%= link_to 'Add Recipe', new_user_recipe_path(user_id: @user.id) %>
</div>

<% @user.recipes.each do |recipe| %>
  <div class="recipe">
    <h3>
      <%= link_to recipe.name, user_recipe_path(user_id: @user.id, id: recipe.id) %>
    </h3>  
    <div>
      <%= button_to 'Remove', {:controller => :recipes, :action => 'destroy', :id => recipe.id}, :method => :delete %>
    </div>
  </div>
  <div class="description">
    <%= recipe.description %>
  </div></br>
<% end %>
