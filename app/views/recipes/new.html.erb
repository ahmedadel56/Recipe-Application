<h2>Add new Recipe</h2>

<%= form_with model: @recipe, url: new_user_recipe_recipe_food_path do |f| %>
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :preparation_time %>
  <%= f.text_field :preparation_time %>
  </p>

  <p>
  <%= f.label :cooking_time %>
  <%= f.text_field :cooking_time %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </p>

  <p>
  <%= f.label :public %>
  <%= f.check_box :public %>
  </p>

  <p><%= f.submit %></p>
<% end %>
